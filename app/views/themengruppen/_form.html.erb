<%= semantic_form_for @themengruppe do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :priority %>
    <%= f.input :public %>
    <%= f.input :picture, :as => :file %>
    <%= f.input :text %>

  <% end %>

  <%= f.actions do %>
   	<%= f.action :submit, :as => :input %>
	<%= f.action :cancel,:label => I18n.t("common.back"), :as => :link %>
  <% end %>
<% end %>
