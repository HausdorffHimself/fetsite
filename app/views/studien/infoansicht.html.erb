    <%= render 'studien/tabs' %>
	<div class="content-wrap content-column">

<div class="container-fluid">
  <div class="row-fluid">

    <div class="span6">    
      <h1><%= @studium.typ %> <%= @studium.name %>  (<%= @studium.zahl %>)</h1>
    </div>
    <div class="span3 pull-right">
